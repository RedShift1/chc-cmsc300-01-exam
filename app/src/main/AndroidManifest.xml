<?xml version="1.0" encoding="utf-8"?>
<manifest package="edu.chc.appdev.glennmatthys.exam"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".AddHostActivity"
            android:label="Add host">
        </activity>
        <activity android:name=".AddMeetingActivity"
            android:label="Add meeting">
        </activity>
        <activity android:name=".ViewHostsActivity"
            android:label="View hosts">
        </activity>
    </application>

</manifest>
